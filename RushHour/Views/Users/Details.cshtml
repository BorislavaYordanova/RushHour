@model RushHour.ViewModels.UserViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Details</h1>

<div>
    <table class="table table-hover">
            <thead>
                <tr class="info">
                    <td>
                        @Html.LabelFor(x => Model.Id)
                    </td>
                    <td>
                        @Html.LabelFor(x => Model.Name)
                    </td>
                    <td>
                        @Html.LabelFor(x => Model.Password)
                    </td>
                    <td>
                        @Html.LabelFor(x => Model.Phone)
                    </td>
                    <td>
                        @Html.LabelFor(x => Model.Email)
                    </td>
                    <td>
                        @Html.LabelFor(x => Model.IsAdmin)
                    </td>
                </tr>
            </thead>
            <tr>
                <td>
                    @Html.DisplayFor(x => Model.Id)
                </td>

                <td>
                    @Html.DisplayFor(x => Model.Name)
                </td>

                <td>
                    @Html.DisplayFor(x => Model.Password)
                </td>

                <td>
                    @Html.DisplayFor(x => Model.Phone)
                </td>

                <td>
                    @Html.DisplayFor(x => Model.Email)
                </td>
                <td>
                    @Html.DisplayFor(x => Model.IsAdmin)
                </td>
            </tr>
        </table>
</div>
<div class="form-group">
    <div>
        <a href="../Index" class="btn btn-info">&#9668; Back to List</a>
    </div>
</div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


