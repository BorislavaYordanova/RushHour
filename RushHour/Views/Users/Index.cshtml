
@model List<RushHour.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Users</h1>

<table class="table table-hover">
@foreach (var item in Model)
{
    <thead>
        <tr class="success">
            <td>
                @Html.LabelFor(x => item.Name)
            </td>
            <td>
                @Html.LabelFor(x => item.Email)
            </td>
            <td>
                @Html.LabelFor(x => item.Phone)
            </td>
            <td>
                @Html.LabelFor(x => item.IsAdmin)
            </td>
            <td>
                <div>
                    <div class="col-md-offset-9 col-md-10">
                        <a href="../Users/Create" class="btn btn-success">Create New</a>
                    </div>
                </div>
            </td>
        </tr>
    </thead>

    break;
}
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(x => item.Name)
        </td>

        <td>
            @Html.DisplayFor(x => item.Email)
        </td>

        <td>
            @Html.DisplayFor(x => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(x => item.IsAdmin)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}
</table>


