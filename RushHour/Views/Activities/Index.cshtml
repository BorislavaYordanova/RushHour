
@model List<RushHour.ViewModels.ActivityViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Activities</h1>

<table class="table table-hover">
    @foreach (var item in Model)
    {
        <thead>
            <tr class="success">
                <td>
                    @Html.LabelFor(x => item.Id)
                </td>
                <td>
                    @Html.LabelFor(x => item.Name)
                </td>
                <td>
                    @Html.LabelFor(x => item.Duration)
                </td>
                <td>
                    @Html.LabelFor(x => item.Price)
                </td>
                <td>
                    <div>
                        <div>
                            <a href="../Activities/Create" class="btn btn-success">Create New</a>
                        </div>
                    </div>
                </td>
            </tr>
        </thead>

        break;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(x => item.Id)
            </td>

            <td>
                @Html.DisplayFor(x => item.Name)
            </td>

            <td>
                @Html.DisplayFor(x => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(x => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>